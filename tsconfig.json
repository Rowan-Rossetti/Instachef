{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",                           // Version moderne de JavaScript
    "module": "ES2022",                           // Utilise l'import/export natif
    "moduleResolution": "bundler",                // Recommandé avec Vite ou Angular SSR
    "outDir": "./dist/out-tsc",                   // Dossier de sortie des fichiers compilés
    "importHelpers": true,                        // Réduit la duplication de code avec tslib
    "strict": true,                               // Active tous les contrôles stricts
    "noImplicitReturns": true,                    // Empêche les fonctions sans return explicite
    "noFallthroughCasesInSwitch": true,           // Empêche de tomber sur le case suivant
    "noImplicitOverride": true,                   // Force à utiliser override quand nécessaire
    "noPropertyAccessFromIndexSignature": true,   // Plus de sécurité dans l'accès aux propriétés
    "skipLibCheck": true,                         // Améliore le temps de compilation
    "isolatedModules": true,                      // Utile avec des outils comme Vite
    "esModuleInterop": true,                      // Compatibilité CommonJS/ESModules
    "experimentalDecorators": true                // Nécessaire pour Angular (decorators)
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,     // Favorise le nouveau format i18n
    "strictInjectionParameters": true,            // Injection plus sûre
    "strictInputAccessModifiers": true,           // Renforce la sécurité des @Input
    "strictTemplates": true                       // Analyse stricte des templates HTML Angular
  }
}
